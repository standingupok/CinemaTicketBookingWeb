@model cinema_web.Models.Ticket

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <select asp-for="AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FilmId" class="control-label"></label>
                <select class="form-select" asp-for="FilmId" asp-items="@(new SelectList(ViewBag.Films,"FilmId","FilmName"))"></select>
                <!--

                <select asp-for="FilmId" class ="form-control" asp-items="ViewBag.FilmId"></select>
                -->
            </div>
            <div class="form-group">
                <label asp-for="ScreeningId" class="control-label"></label>
                <select class="form-select" asp-for="ScreeningId" asp-items="@(new SelectList(ViewBag.Screenings,"ScreeningId","StartTime"))"></select>
                <!--

                <select asp-for="ScreeningId" class ="form-control" asp-items="ViewBag.ScreeningId"></select>
                -->
            </div>
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label"></label>
                <input asp-for="SeatNumber" class="form-control" />
                <span asp-validation-for="SeatNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-purple" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
