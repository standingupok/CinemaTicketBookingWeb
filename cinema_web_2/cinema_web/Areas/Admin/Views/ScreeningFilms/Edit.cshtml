@model cinema_web.Models.ScreeningFilm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chỉnh sửa</h1>

<h4>Suất chiếu và phim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--

            <input type="hidden" asp-for="FilmId" />
            <input type="hidden" asp-for="ScreeningId" />
            -->
            <div class="form-group">
                <label asp-for="FilmId" class="control-label"></label>
                <select class="form-select" asp-for="FilmId" asp-items="@(new SelectList(ViewBag.Films,"FilmId","FilmId"))"></select>
                <!--

                <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                -->
                <span asp-validation-for="FilmId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreeningId" class="control-label"></label>
                <select class="form-select" asp-for="ScreeningId" asp-items="@(new SelectList(ViewBag.Screenings,"ScreeningId","TimeDuration"))"></select>
                <!--

                <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                -->
                <span asp-validation-for="ScreeningId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-outline-purple" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <svg class="back-icon" data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18"></path>
        </svg>Trở về
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
